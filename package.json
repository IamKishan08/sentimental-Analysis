{
    "name": "sentimental-analysis-app",
    "version": "1.0.0",
    "scripts": {
        "start": "concurrently \"npm run start-node\" \"npm run start-flask\" \"npm run serve-frontend\"",
        "start-node": "node backend/server.js",
        "start-flask": "flask run --app=sentimental_analsis/app.py --port=5001",
        "serve-frontend": "lite-server --baseDir=frontend --port=3003"
    },
    "devDependencies": {
        "concurrently": "^6.4.0",
        "lite-server": "^2.6.1",
        "npm-run-all": "^4.1.5"
    }
}
